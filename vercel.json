{
  "buildCommand": "echo 'No build needed - static site'",
  "outputDirectory": "website",
  "installCommand": "echo 'No install needed'",
  "cleanUrls": true,
  "trailingSlash": false,
  "rewrites": [
    { "source": "/download", "destination": "/download.html" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}
